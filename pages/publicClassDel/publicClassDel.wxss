/* pages/classDetails/classDetails.wxss */

/* 顶部视频 start */
.videoWrap{
    position: relative;
}
.myVideo{ 
  width:100%;
  height: calc(9 * 750rpx / 16);
  background-color: #fff;
}
.controls{
  position:absolute;
  z-index:1; 
  background-color: #fff;    
   height: calc(9 * 750rpx / 16); 
  margin-top:-430rpx;
}
.play{ 
    position:absolute;
    left:50%;
    margin-top:-300rpx;
    margin-left:-80rpx;    
}
/* 顶部视频 end */

/* 内容部分 start */
/* 课程信息 start */
.content{
    padding: 0 20rpx;
    margin-bottom: 30rpx;
    font-size: 24rpx;
}
.con_top{
    margin-bottom: 5rpx;
    padding: 10rpx 20rpx;
    border-bottom: 1px solid #ddd;
}
.con_top .kc_bg{
    padding: 3rpx 8rpx;
    margin-right: 20rpx;
    color: #fff;
    background-color: #22ac38;
}
.con_top .kc_title{
    font-weight: bold;
    font-size: 28rpx;
}

.con_top .class_bot{
    padding-top: 10rpx;
    color: #acaeb2;
}
.con_top .class_bot .rq{
    float: right;
}
/* 课程信息 end */
/* 讲师信息 start */
.teacher_del > .title{
  padding: 10rpx 0;
  font-size: 30rpx;
  text-align: center;
  text-indent: 0;
}
.teacher_del image{
    width: 100%;
    height: 460rpx;
}
.teacher_del view{
    text-indent: 2em;
    line-height: 1.5;
}

/* 讲师信息 end */


/* 内容部分 end */


