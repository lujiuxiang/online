/* pages/mine/mine.wxss */


/* 顶部 会员信息 start */
.title{
    display: flex;
    position: relative;
    align-items: center;
    padding: 20rpx 30rpx;
    font-size: 24rpx;
    border-bottom: 4px solid #f4f4f4;
}
.title image{
    margin-right: 20rpx;
    width: 130rpx;
    height: 130rpx;
}
.t_right .username{
    font-size: 32rpx;
    padding-bottom: 16rpx;
}
.t_right .vip{
    color: #a3a3a3;
}
.t_right text{
    position: absolute;
    right: 35rpx;
    top: 50%;
    transform: translateY(-50%);
}

.no_login{
    display: flex;

}
.no_login view{
    padding: 0 10rpx;
    font-size: 28rpx;
}

/* 顶部 会员信息 end */

/* 底部 列表 start */
.list{
    padding: 0 30rpx;
    font-size: 30rpx;
}

.list > view{
    display: flex;
    align-items: center;
    padding: 16rpx 0;
    border-bottom: 1px solid #ddd;
}
.list > view .iconfont{
    padding: 0 10rpx;
    font-size: 32rpx;
}
.list > view .icon-youjiantou{
    flex: 1;
    text-align: right;
    font-size: 24rpx;
}
/* 底部 列表 end */

