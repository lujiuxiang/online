/* pages/index/index.wxss */
.container{
    font-size: 24rpx;
}
.layout-content {
    width: 100%;
    height: 100%;
}
 
/* tab */
/* 首页头部导航 start */
.layout-tab {
    position: relative;
    height: 100%;
}
 
.layout-tab-title {
    display: flex;
    box-sizing: border-box;
    flex-direction: row;
    height: 8%;
    align-items: center;
    justify-content: space-around;
    color: #000;
    background-color: #fff;
}
 
.tab-title {
    height: 70%;
    display: flex;
    align-items: center;
    font-size: 32rpx;
}
 
.select {
    border-bottom: 1px solid #e8009d;
    height: 65%;
    color: #e8009d;
}
/* 首页头部导航 end */
 
/* swiperTab */
/* 首页轮播 start */
.layout-tab-swiper {
    height: 92%;
    position: relative;
    box-sizing: border-box;
}
 
.layout-tab-swiper swiper {
    height: 100%;
}
 
.layout-tab-lists {
    display: flex;
    flex-direction: column;
    height: 100%;
}
 
/* swiperImage */
.layout-image-swiper {
    height: 30%;
}
 
.layout-image-swiper swiper image {
    width: 100%;
    height: 100%;
}
 
/* lists */
.layout-lists {
    height: 100%;
    box-sizing:border-box;
}
 
.layout-lists .lists-content {
    padding:10rpx;
}
/* 首页轮播 end */

/* 首页轮播下导航 start*/
.bot_nav{
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 140rpx;
    border-bottom: 1px solid #ddd;
}
.bot_nav > view{
    padding: 20rpx 0;
    flex: 1;
    text-align: center;
}
.bot_nav > view image{
    width: 60rpx;
    height: 60rpx;
}
/* 首页轮播下导航 end*/
/* 精品推荐 start */
.recommend_title{
    position: relative;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    text-align: center;
}
.recommend_title text{
    position: relative;
    z-index: 2;
    background-color: #fff;
    letter-spacing: 5rpx;
    padding: 0 30rpx;
}
.recommend_title::before{
    position: absolute;
    top: 49%;
    left: 0;
    content: "";
    width: 100%;
    border-bottom: 1px solid #000;
}

.recommend_content{
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
}
.recommend_content view{
    display: inline-block;
    flex-direction: column;
    align-items: center;
    margin: 0 20rpx;
    width: 250rpx;
    height: 205rpx;
    box-shadow: 0 0 30rpx #bbb;
}
.recommend_content view image{
    width: 100%;
    height: 70%;
    box-sizing: border-box;
}
.recommend_content view text{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 23%;
    text-align: center;
}
/* 精品推荐 end */

/* 课程列表 start */
.class_list{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}
.class_list image{
    width: 150rpx;
    height: 170rpx;
}
.class_list>view{
    display: flex;
    padding: 20rpx 0;
    border-bottom: 1px solid #ddd;
}
.class_list .c_l_right{
    flex: 1;
    padding-left: 10rpx;
}
.class_list .c_l_right .c_l_title{
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    font-size: 30rpx;
    font-weight: bold;
}
.class_list .c_l_right .ddd{
    position: relative;
    margin-top: 12rpx;
    color: #a3a3a3;
    font-size: 26rpx;
}
.class_list .c_l_right .ddd text{
    position: absolute;
    bottom: 0;
    right: 0;
    padding: 5rpx 20rpx;
    color: #fff;
    background-color: #ed03a2;
    border-radius: 10rpx;
    font-size: 22rpx;
}
.class_list .c_l_right .text_hidden{
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.index_class{
    padding: 0 20rpx;
}
/* 课程列表 end */


/* 公开课堂 start */
.index_class{
    padding: 0 20rpx;
}
/* 公开课堂 end */

/* 平台介绍 start */
.index_recommend image{
    width: 100%;
}
.index_recommend > view{
    padding: 10rpx 30rpx;
}
.index_recommend .title{
    font-size: 30rpx;
    padding-bottom: 10rpx;
}
.index_recommend .del{
    text-indent: 2em;
}
/* 平台介绍 end */

/* 通知公告 start */
.index_notice > view{
    display: flex;
    align-items: center;
    padding: 20rpx;
    border-bottom: 1px solid #ddd;
}
.index_notice image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
.index_notice > view:first-child{
    border-top: 1px solid #ddd;
}
.index_notice > view view{
    flex: 1;
    padding-left: 20rpx;
    font-size: 30rpx;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
/* 通知公告 end */
/* 筛选 start */
.filter{
    background-color: rgba(0, 0, 0, .1)
}
.index_filter{
    padding: 30rpx 20rpx;
    margin: 20rpx auto 0;
    width: 95%;
    box-sizing: border-box;
    background-color: #fff;
}
.index_filter > view,
.index_filter > picker{
    display: flex;
    position: relative;
    font-size: 28rpx;
}
.index_filter .left{
    flex: 1;
}
.index_filter .right{
    position: absolute;
    right: 0;
    width: 90%;
    text-align: right;
    color: #afb1b4;
}
.index_filter .teac{
    padding-top: 20rpx;
    border-bottom: 1px solid #ddd;
}
.index_filter .type{
    padding-top: 60rpx;
    border-bottom: 1px solid #ddd;
}
.index_filter .bot{
    margin-top: 40rpx;
    justify-content: center;
}
.index_filter .bot view{
    padding: 10rpx 30rpx;
    color: #fff;
    background-color: #f60;
}
/* 课程列表 start */
.wrap{
    display: flex;
    padding: 10rpx 30rpx;
}
.wrap image{
    margin-right: 10rpx;
    width: 240rpx;
    height: 150rpx;
    border-radius: 10rpx;
}
.class_right{
    position: relative;
    flex: 1;
}
.wrap .title{
    font-size: 30rpx;
}
.wrap .watched{
    padding: 10rpx 0;
}

.wrap .isMember{
    padding-top: 10rpx;
    font-size: 30rpx;
    color: #e800a1;
}
.wrap .goWatch{
    position: absolute;
    bottom: 30rpx;
    right: 0;
    padding: 8rpx 20rpx;
    color: #fff;
    background-color: #e800a1;
    border-radius: 10rpx;
}
/* 课程列表 end */
/* 筛选 end */