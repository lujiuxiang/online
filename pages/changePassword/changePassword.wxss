/* pages/YYForm/YYForm.wxss */
.container{
    justify-content: flex-start;
    padding: 50rpx 70rpx;
}
image{
    width: 100%;
}

form{
    width: 100%;
    font-size: 28rpx;
}
.section{
    display: flex;
    align-items: center;
    padding: 0 10rpx;
    height: 90rpx;
    border-bottom: 1px solid #eee;
}
.section__title{
    height: 100%;
    line-height: 90rpx;
}
.section button{
    margin: 0;
    padding: 0;
    font-size: 24rpx;
    color: #000;
    background-color: #f8f8f8;
}
input{
    display: inline-block;
    flex: 1;
    height: 100%;
    line-height: 90rpx;
    vertical-align: middle;
}
.section view{
    margin-right: 20rpx;
}
.btn-area{
    display: flex;
    margin-top: 30rpx;
}
button{
    flex: 1;
    font-size: 30rpx;
    border-radius: 14rpx;
    color: #fff;
    background-color: #ea019b;
}
.button-hover{
    color: #fff;
    background-color: #ea019b;
}


