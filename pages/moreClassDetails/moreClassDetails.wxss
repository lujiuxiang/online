/* pages/moreClassDetails/moreClassDetails.wxss */
/* 评论列表 start */
.co_list{
    padding-top: 20rpx;
    margin-bottom: 85rpx;
}
.co_list > view{
    display: flex;
    align-items: flex-start;
    padding: 15rpx 0;
    border-bottom: 1px solid #ddd;
    font-size: 24rpx;
}
.co_list image{
    margin: 0 15rpx;
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}
.l_right{
    flex: 1;
}
.l_right .username{
    display: flex;
    font-size: 32rpx;
    align-items: center;
}
.l_right .username .time{
    flex: 1;
    color: #adafb2;
    text-align: right;
    font-size: 24rpx;
    padding-right: 20rpx;
}
.l_right .r_del{
    margin-top: 6rpx;
    padding-right: 20rpx;
}
.l_right .r_del > view{
    display: flex;
    justify-content: flex-end;
}
.l_right .r_del image{
    margin: 0;
    border-radius: 0;
    width: 30rpx;
    height: 30rpx;
}
.l_right .r_del text{
    margin-left: 5rpx;
    margin-right: 10rpx;
}
/* 评论列表 end */

/* 写评论 start */
.write{
    display: flex;
    position: fixed;
    bottom: 0;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 80rpx;
    background-color: #ccc;
    font-size: 28rpx;
}
.write text{
    padding-left: 10rpx;
}
/* 写评论 end */

/* 写评论 弹出遮罩层 start */
.bg{
    position: fixed;
    top: 0;
    background-color: rgba(0,0,0,.2);
    width: 100%;
    height: 100%;
}
.model{
    position: fixed;
    z-index: 2;
    bottom: 0;
    width: 100%;
    height: 50%;
    background-color: #fff;
}
.close {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    height: 10%;
    text-align: right;
    font-size: 28rpx;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    box-sizing: border-box;
}
.close text{
    padding: 10rpx 30rpx;
}
.model scroll-view{
    padding: 30rpx 20rpx;
    font-size: 24rpx;
}
textarea{
    padding: 10rpx;
    width: 100%;
    height: 360rpx;
    border: 1px solid #ddd;
    border-radius: 10rpx;
    box-sizing: border-box;
}
button{
    margin-top: 40rpx;
    font-size: 28rpx;
}
/* 写评论 弹出遮罩层 end */